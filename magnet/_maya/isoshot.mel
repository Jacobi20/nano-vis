/*-----------------------------------------------------------------------------
	ISOMETRICAL SHOT :
-----------------------------------------------------------------------------*/

proc string NumToString(float $num)
{
	if ( $num < 10 )  return  "00" + $num;
	if ( $num < 100 ) return  "0" + $num;
	if ( $num < 1000 ) return "" + $num;
	return $num;
}

//
//	entityLockAttribute
//	- makes attribute read-only
//	
global proc isoShot(float $dist, float $angle)
{
	string $path[] = `camera -orthographic true -orthographicWidth 20` ;
	
	float $x =  sin ($angle / 57.29) * 2 * $dist;
	float $y = cos ($angle / 57.29) * 2 * $dist;
	move -r $x $y $dist;
	
	string $attr;
	$attr = $path[0] + ".shearYZ";
	setAttr $attr -2;

	$attr = $path[0] + ".rotateZ";
	$a    = 180 - $angle;
	setAttr $attr $a;
	
	string $iffimage    = `render -x 128 -y 128 $path[1]` ;
	int     $strlen      = size ( $iffimage ) - 4;
	string $numfix      = NumToString( $angle );
	string $psdimage    = `substring $iffimage 1 $strlen` + $numfix + ".psd";
	string $pngimage    = `substring $iffimage 1 $strlen` + $numfix + ".png";
	
	convertIffToPsd -iffFileName $iffimage -psdFileName $psdimage;
	
	psdExport -ifn $psdimage -ofn $pngimage -layerName "RGB Layer" -for "png" -bpc 1;

	
	delete $path[0] $path[1];
}


for ($a=0; $a < 360; $a+=5) {
	isoShot(20, $a);
}


